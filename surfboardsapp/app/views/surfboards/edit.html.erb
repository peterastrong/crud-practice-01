<%= form_tag "/surfboards/#{@surfboard.id}", method: :patch do %>
  
  <div class="form-group">
    <label>Shaper:</label>
    <input type="text" name="shaper" value="<%= @surfboard.shaper %>" >
  </div>
   <div class="form-group">
    <label>Length:</label>
    <input type="text" name="length" value="<%= @surfboard.length %>" >
  </div>
  <div class="form-group">
    <input type="submit" name="submit" >
  </div>


<% end %>